<%- include('../defaults/header.ejs') %>
<!-- <% var chat %> -->
<style>
    .hidden{
        display: none;
    }
    .chat{
        text-align: center;
    }
</style>
<section class="mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <form method="post" action="/home/submit_lead">
                    <div class="card">
                        <div class="card-header">
                            <h4>Leads Information</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="lead_name">Name</label>
                                <input class="form-control col-md-12" name="lead_name" id="lead_name"/>
                            </div>
                            <div class="form-group">
                                <label for="lead_email">Email</label>
                                <input class="form-control col-md-12" name="lead_email" id="lead_email"/>
                            </div>
                            <div class="form-group">
                                <label for="lead_phone">Phone</label>
                                <input class="form-control col-md-12" name="lead_phone" id="lead_phone"/>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-6">
                <form id="scheduleForm" method="post" action="/home/schedule">
                    <div class="card">
                        <div class="card-header">
                            <h4>Schedule Information</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="lead_name">Name</label>
                                <select id="leadSelect" class="form-control" name="lead_id">
                                    <option>Choose</option>
                                    <!-- Options will be dynamically populated via AJAX -->
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="lead_phone">Phone</label>
                                <input class="form-control col-md-12" name="lead_phone" id="leadPhone" readonly/>
                            </div>
                            
                            <div class="col-sm-12 d-flex justify-content-between">
                                <div class="col-sm-5 form-group">
                                    <label class="form-label" for="interval">Days Interval</label>
                                    <input class="form-control col-md-12" name="interval" id="interval"/>
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label class="form-label" for="remain_time">Time</label>
                                    <input class="form-control col-md-12" name="remain_time" id="remain_time"/>
                                </div>
                            </div>
                            
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<div class="<%= !chat ? 'hidden' : '' %> container mt-5 chat" id="chat">
    <h2>Chat with Us</h2>
    <p>Would like to sign the engagement letter with Dexterous InfoSolutions?</p>
    <div class="d-flex justify-content-center"></div>
    <input type="text" class="form-control" id = "userinput" placeholder="yes/no">
    <button class="btn btn-primary chat-btn" onclick="chat_func()">Submit</button>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    function chat_func(){
			let a = document.getElementById('userinput').value;
			if(a == "yes"){
				window.location.replace("http://www.dextrousinfo.com");
			}else{
				window.location.replace("/");
			}
		}
    $(document).ready(function() {
        // Fetch leads and populate select dropdown
        $.ajax({
            url: '/home/get_leads',
            method: 'GET',
            success: function(data) {
                data.forEach(function(lead) {
                    $('#leadSelect').append(`<option value="${lead.lead_id}">${lead.lead_name}</option>`);
                });
            },
            error: function(err) {
                console.error('Error fetching leads:', err);
            }
        });

        // Fetch and display lead phone number on lead selection
        $('#leadSelect').change(function() {
            const leadId = $(this).val();
            $.ajax({
                url: `/home/get_lead/${leadId}`,
                method: 'GET',
                success: function(data) {
                    $('#leadPhone').val(data.phone);
                },
                error: function(err) {
                    console.error('Error fetching lead phone number:', err);
                }
            });
        });
        document.getElementById('scheduleForm').addEventListener('submit', function (event) {
            event.preventDefault();

            const formData = new FormData(this);

            fetch('/home/schedule', {
                method: 'POST',
                body: new URLSearchParams(formData)
            })
            .then(response => response.text())
            .then(data => {
                alert('Schedule created successfully!');
                console.log(data);
            })
            .catch(error => {
                console.error('Error:', error);
            });
        });
    });
    function checkReminders() {
            const leadId = $('#leadSelect').val();
            fetch(`/home/check-reminders/${leadId}`)
                .then(response => response.text())
                .then(data => {
                    if(data){
                        var chat = true;
                        console.log(chat);
                    }
                    alert(data);
                    console.log(data);

                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }
        setInterval(checkReminders,60000);
</script>


<%- include('../../defaults/header.ejs') %>

<style>
    
</style>
<br><br>
<section class="mt-4">
    <div class="container">
        <div class="page-inner">
            <div class="row">
                <div class="col-lg-12">
                    <form id="scheduleForm" method="post" action="/home/update_schedule/<%= data[0].sched_id%>">
                        <div class="card">
                            <div class="card-header">
                                <h4>Schedule Information</h4>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="sched_name">Schedule Name</label>
                                    <input class="form-control col-md-12" name="sched_name" id="sched_name" required value="<%= data[0].schedule_name%>"/>
                                </div>
                                <div class="form-group">
                                    <label for="catSelect2">Category</label>
                                    <select id="catSelect2" class="form-control" name="catSelect2" required value="<%= data[0].cate_id_ref%>">
                                        <!-- <option>Choose</option> -->
                                        <!-- Options will be dynamically populated via AJAX -->
                                    </select>
                                </div> 
                                <div class="col-sm-12 d-flex justify-content-between">
                                    <div class="col-sm-5 form-group">
                                        <label class="form-label" for="interval">Days Interval</label>
                                        <input class="form-control col-md-12" name="interval" id="interval" required value="<%= data[0].days_interval%>"/>
                                    </div>
                                    <div class="col-sm-6 form-group">
                                        <label class="form-label" for="remain_time">Time</label>
                                        <input class="form-control col-md-12" name="remain_time" id="remain_time" required value="<%= data[0].sched_time%>"/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="template_area">Template</label>
                                    <textarea placeholder="Write the format" name="template_area" id="template_area" class="form-control" rows="5" required ><%= data[0].template%></textarea>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script>
    $(document).ready(function() {

        $.ajax({
            url: '/home/get_cate',
            method: 'GET',
            success: function(data) {
                data.forEach(function(cate) {
                    $('#catSelect2').append(`<option value="${cate.cate_id}">${cate.cate_name}</option>`);
                });
            },
            error: function(err) {
                console.error('Error fetching leads:', err);
            }
        });
    });
</script>





